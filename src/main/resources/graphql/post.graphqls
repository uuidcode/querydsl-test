type Post {
    id: ID!
    title: String!
    text: String!
    category: String
    author: Author!
}

# 창작자
type Author {
    id: ID!
    #이름
    name: String!
    thumbnail: String
    postList: [Post]
}

type Query {
    recentPosts(count: Int, offset: Int): [Post]!
    findAllAuthor: [Author]!
}

type Mutation {
    writePost(id: ID!, title: String!, text: String!, category: String) : Post!
    writeAuthor(name: String!, thumbnail: String!) : Author!
}